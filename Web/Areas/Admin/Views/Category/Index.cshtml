@using WebApp.ViewModels.Category
@model CategoryIndexVM
<a class="btn btn-warning" asp-action="create" asp-controller="category">Create</a>
<br />
<!-- DataTales Example -->
<div class="card shadow mb-4 ">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td> @category.Id</td>
                            <td>@category.Title </td>
                            <td>@category.CreatedAt.ToShortDateString()</td>
                            <td>@category.ModifiedAt.ToShortDateString()</td>
                            <td>
                                <a class="btn btn-primary  mb-2" asp-action="update" asp-controller="category" asp-route-id="@category.Id">Update</a>
                                <form asp-route-id="@category.Id" method="post" asp-action="delete" asp-controller="category">
                                    @*  <input id="id" name="id"  value="@category.Id" type="hidden" />*@
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>